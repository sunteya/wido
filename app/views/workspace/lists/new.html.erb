<div class="modal-dialog">
<div class="modal-content">
	<%= simple_form_for @list, url: workspace_lists_path, remote: true do |f| %>
		<div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			<h4 class="modal-title">New List</h4>
		</div>

		<div class="modal-body">
			<div class="form-inputs">
			<%= f.input :name %>
			</div>
		</div>
		<div class="modal-footer">
			<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
			<%= f.submit class: 'btn btn-primary' %>
		</div>
	<% end %>

	<script>
	$("form#new_list").on("ajax:success", function(event, data, status, xhr) {
		location.reload();
	}).on("ajax:error", function(event, xhr, status, error) {
		$(event.target).closest(".modal-dialog").replaceWith(xhr.responseText);
	});
	</script>
</div>
</div>