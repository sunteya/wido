<%= render partial: "workspace/shared/list", locals: { collection: @collection } %>

<div class="view view-main">
	<%= render partial: "tabs", locals: { tab: :show } %>

	<article>
		<hgroup>
			<h1><%= @article.title %></h1>
			<p class="tags">
				<% @article.tags.each do |tag| %>
					<span class="label"><%= tag %></span>
				<% end %>
			</p>
		</hgroup>

		<%=raw article_content(@article) %>
	</article>
</div>
