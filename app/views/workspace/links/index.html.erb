<h1>Listing links</h1>

<table>
	<tr>
		<th>TITLE</th>
		<th>URL</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>
<% @links.each do |link| %>
	<tr>
		<td><%= link.title %></td>
		<td><%= link.url %></td>
		<td><%= link_to 'Show', [ :workspace, link ] %></td>
		<td><%= link_to 'Edit', edit_workspace_link_path(link) %></td>
		<td><%= link_to 'Destroy', [ :workspace, link ], method: :delete, data: { confirm: 'Are you sure?' } %></td>
	</tr>
<% end %>
</table>

